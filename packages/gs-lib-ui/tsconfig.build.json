{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "src/**/__tests__/*",
        "src/main.ts",
        "src/App.vue",
        "src/components/MainView.vue",
    ],
    "compilerOptions": {
        "noEmit": false,
        "declaration": true,
        "allowJs": true,
        "outDir": "dist",
        "paths": {
            "~/*": [
                "./src/*"
            ],
        }
    }
}